{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "noImplicitAny": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "traceResolution": false,
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": false,
        "typeRoots": [
            "/"
        ]
    },
    "exclude": [
        "src/client/"
    ]
}
