{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "reveal": "always"
    },
    "tasks": [
        {
            "taskName": "TS - Compile Server",
            "type": "shell",
            "command": "tsc",
            "args": [
                "-w",
                "-p",
                "tsconfig.server.json"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "isBackground": true
        }
    ]
}