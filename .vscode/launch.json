{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "使用本机 Chrome 调试",
            "type": "chrome",
            "request": "launch",
            "url": "http://mysite.com/index.html",
            "sourceMaps": true,
            "preLaunchTask": "Egret - Build",
            "userDataDir": "${tmpdir}",
            "port": 5659
        },
        {
            "name": "Wing 内置播放器调试",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceRoot}/src/client/index.html",
            //"url": "http://mysite.com/index.html",
            "runtimeExecutable": "${execPath}",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/src/client",
            "preLaunchTask": "Egret - Build",
            "port": 5659
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug all server",
            "port": 9229,
            "sourceMaps": true,
            "preLaunchTask": "Pomelo Start"
        }
    ]
}