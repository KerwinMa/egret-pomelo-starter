{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "noImplicitAny": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "traceResolution": true,
        "rootDir": "./src",
        "outDir": "./build",
        "declaration": false,
        "allowJs": false,
        "typeRoots": []
    },
    "exclude": [
        "src/client/",
        "modules"
    ]
}
