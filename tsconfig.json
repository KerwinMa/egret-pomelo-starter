{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "noImplicitAny": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "traceResolution": false,
        "rootDir": "./src",
        "outDir": "./build",
        "declaration": false,
        "allowJs": false
    },
    "exclude": [
        "src/client/",
        "src/modules/newaes",
        "src/modules/protobuf",
        "src/modules/puremvc"
    ]
}
